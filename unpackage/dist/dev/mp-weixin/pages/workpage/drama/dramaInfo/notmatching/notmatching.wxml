<view><button data-event-opts="{{[['tap',[['add']]]]}}" class="margin-top buttonwidth" bindtap="__e">添加角色</button><block wx:for="{{alldata}}" wx:for-item="item" wx:for-index="index"><block wx:if="{{resetview}}"><view class="one_questions"><view class="uni-list one_picker"><view class="uni-list-cell one_input"><view class="uni-list-cell-left titlebox">选择人物:</view><view class="uni-list-cell-db pickerbox"><picker value="{{item.NPC_index}}" range="{{allNPClist}}" range-key="name" data-event-opts="{{[['change',[['utterance_operation1',['$event',index]]]]]}}" bindchange="__e"><view class="uni-input">{{item.npcName?item.npcName:'请选择'}}</view></picker><fa-icon class="icon_right" vue-id="{{'1-'+index}}" type="chevron-right operation_icon" size="14" color="#666666" bind:__l="__l"></fa-icon></view></view></view><view class="uni-list one_picker"><view class="uni-list-cell one_input"><view class="uni-list-cell-left titlebox">选择情绪:</view><view class="uni-list-cell-db pickerbox"><picker value="{{item.Mood_index}}" range="{{item.moodList}}" range-key="label" data-event-opts="{{[['change',[['utterance_operation2',['$event',index]]]]]}}" bindchange="__e"><view class="uni-input">{{item.mood?item.mood:'请选择'}}</view></picker><fa-icon class="icon_right" vue-id="{{'2-'+index}}" type="chevron-right operation_icon" size="14" color="#666666" bind:__l="__l"></fa-icon></view></view></view><view class="uni-textarea"><textarea auto-height="{{false}}" data-event-opts="{{[['input',[['__set_model',['$0','content','$event',[]],[[['alldata','',index]]]]]]]}}" value="{{item.content}}" bindinput="__e"></textarea></view><fa-icon class="delete_icon" vue-id="{{'3-'+index}}" type="trash-o operation_icon" size="28" color="#666666" data-event-opts="{{[['^click',[['delete_questions',['$0'],[[['alldata','',index]]]]]]]}}" bind:click="__e" bind:__l="__l"></fa-icon></view></block></block><button data-event-opts="{{[['tap',[['submitData']]]]}}" class="margin-top buttonwidth" bindtap="__e">保存问答</button></view>